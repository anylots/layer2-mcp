{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}